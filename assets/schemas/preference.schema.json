{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://claude-memory.dev/schemas/preference.schema.json",
  "title": "Preference Memory",
  "description": "Schema for preference category content",
  "type": "object",
  "required": ["schema_version", "category", "id", "title", "created_at", "updated_at", "tags", "content"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "category": { "const": "preference" },
    "id": { "type": "string", "pattern": "^[a-z0-9]([a-z0-9-]{0,78}[a-z0-9])?$" },
    "title": { "type": "string", "maxLength": 120 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "related_files": { "type": "array", "items": { "type": "string" } },
    "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "record_status": { "type": "string", "enum": ["active", "retired", "archived"], "default": "active" },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "summary"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "summary": { "type": "string", "maxLength": 300 },
          "field": { "type": "string" },
          "old_value": {},
          "new_value": {}
        }
      },
      "maxItems": 50
    },
    "times_updated": { "type": "integer", "default": 0 },
    "retired_at": { "type": "string", "format": "date-time" },
    "retired_reason": { "type": "string", "maxLength": 300 },
    "archived_at": { "type": "string", "format": "date-time" },
    "archived_reason": { "type": "string", "maxLength": 300 },
    "content": {
      "type": "object",
      "required": ["topic", "value", "reason", "strength"],
      "properties": {
        "topic": {
          "type": "string",
          "description": "Category of preference (e.g. testing, naming, style, tooling)"
        },
        "value": {
          "type": "string",
          "description": "The preference as a clear directive"
        },
        "reason": {
          "type": "string",
          "description": "Why this preference exists"
        },
        "strength": {
          "type": "string",
          "enum": ["strong", "default", "soft"],
          "description": "How strictly to follow: strong (must), default (unless overridden), soft (suggestion)"
        },
        "examples": {
          "type": "object",
          "properties": {
            "prefer": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Examples of desired approach"
            },
            "avoid": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Examples of what to avoid"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
