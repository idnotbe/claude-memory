{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://claude-memory.dev/schemas/base.schema.json",
  "title": "Claude Memory Record",
  "description": "Base schema for all memory records",
  "type": "object",
  "required": ["schema_version", "category", "id", "title", "created_at", "updated_at", "tags", "content"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version identifier"
    },
    "category": {
      "type": "string",
      "enum": ["session_summary", "decision", "runbook", "constraint", "tech_debt", "preference"],
      "description": "Memory category"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]([a-z0-9-]{0,78}[a-z0-9])?$",
      "description": "Kebab-case slug matching filename (without .json)"
    },
    "title": {
      "type": "string",
      "maxLength": 120,
      "description": "Human-readable title for retrieval"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 UTC timestamp"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 UTC timestamp"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "description": "Retrieval keywords"
    },
    "related_files": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Relative file paths or glob patterns"
    },
    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "description": "LLM confidence in accuracy (0.0-1.0)"
    },
    "content": {
      "type": "object",
      "description": "Category-specific payload"
    }
  },
  "additionalProperties": false
}
