{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://claude-memory.dev/schemas/runbook.schema.json",
  "title": "Runbook Memory",
  "description": "Schema for runbook category content",
  "type": "object",
  "required": ["schema_version", "category", "id", "title", "created_at", "updated_at", "tags", "content"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "category": { "const": "runbook" },
    "id": { "type": "string", "pattern": "^[a-z0-9]([a-z0-9-]{0,78}[a-z0-9])?$" },
    "title": { "type": "string", "maxLength": 120 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "related_files": { "type": "array", "items": { "type": "string" } },
    "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "content": {
      "type": "object",
      "required": ["trigger", "steps", "verification"],
      "properties": {
        "trigger": {
          "type": "string",
          "description": "When/what activates this runbook (error message, symptom, scenario)"
        },
        "symptoms": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Observable signs this runbook applies"
        },
        "steps": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Ordered fix steps (imperative, concrete)"
        },
        "verification": {
          "type": "string",
          "description": "How to confirm the fix worked"
        },
        "root_cause": {
          "type": "string",
          "description": "Why the problem occurs"
        },
        "environment": {
          "type": "string",
          "description": "Where this applies (e.g. CI, local, production)"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
