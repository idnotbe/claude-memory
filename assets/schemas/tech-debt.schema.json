{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://claude-memory.dev/schemas/tech_debt.schema.json",
  "title": "Tech Debt Memory",
  "description": "Schema for tech_debt category content",
  "type": "object",
  "required": ["schema_version", "category", "id", "title", "created_at", "updated_at", "tags", "content"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "category": { "const": "tech_debt" },
    "id": { "type": "string", "pattern": "^[a-z0-9]([a-z0-9-]{0,78}[a-z0-9])?$" },
    "title": { "type": "string", "maxLength": 120 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "related_files": { "type": "array", "items": { "type": "string" } },
    "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "content": {
      "type": "object",
      "required": ["status", "priority", "description", "reason_deferred"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["open", "in_progress", "resolved", "wont_fix"],
          "description": "Debt lifecycle status"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Resolution priority"
        },
        "description": {
          "type": "string",
          "description": "What the debt is, in one sentence"
        },
        "reason_deferred": {
          "type": "string",
          "description": "Why it was not fixed now"
        },
        "impact": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Risks or costs of leaving unresolved"
        },
        "suggested_fix": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Concrete steps to resolve"
        },
        "acceptance_criteria": {
          "type": "array",
          "items": { "type": "string" },
          "description": "How we know the debt is paid"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
