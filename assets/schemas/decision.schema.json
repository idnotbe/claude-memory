{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://claude-memory.dev/schemas/decision.schema.json",
  "title": "Decision Memory",
  "description": "Schema for decision category content",
  "type": "object",
  "required": ["schema_version", "category", "id", "title", "created_at", "updated_at", "tags", "content"],
  "properties": {
    "schema_version": { "const": "1.0" },
    "category": { "const": "decision" },
    "id": { "type": "string", "pattern": "^[a-z0-9]([a-z0-9-]{0,78}[a-z0-9])?$" },
    "title": { "type": "string", "maxLength": 120 },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" },
    "tags": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
    "related_files": { "type": "array", "items": { "type": "string" } },
    "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
    "record_status": { "type": "string", "enum": ["active", "retired", "archived"], "default": "active" },
    "changes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["date", "summary"],
        "properties": {
          "date": { "type": "string", "format": "date-time" },
          "summary": { "type": "string", "maxLength": 300 },
          "field": { "type": "string" },
          "old_value": {},
          "new_value": {}
        }
      },
      "maxItems": 50
    },
    "times_updated": { "type": "integer", "default": 0 },
    "retired_at": { "type": "string", "format": "date-time" },
    "retired_reason": { "type": "string", "maxLength": 300 },
    "archived_at": { "type": "string", "format": "date-time" },
    "archived_reason": { "type": "string", "maxLength": 300 },
    "content": {
      "type": "object",
      "required": ["status", "context", "decision", "rationale"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["proposed", "accepted", "deprecated", "superseded"],
          "description": "Decision lifecycle status"
        },
        "context": {
          "type": "string",
          "description": "The situation/problem that required a choice"
        },
        "decision": {
          "type": "string",
          "description": "The chosen option in one sentence"
        },
        "alternatives": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["option", "rejected_reason"],
            "properties": {
              "option": { "type": "string" },
              "rejected_reason": { "type": "string" }
            },
            "additionalProperties": false
          },
          "description": "Rejected alternatives with reasons"
        },
        "rationale": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1,
          "description": "Key reasons for the choice"
        },
        "consequences": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Trade-offs, risks, or follow-up work"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
